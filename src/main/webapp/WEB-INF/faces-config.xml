<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
    http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">

    <application>
        <locale-config>
            <default-locale>pl</default-locale>
            <supported-locale>en</supported-locale>
        </locale-config>
        <resource-bundle>
            <base-name>i18n.messages</base-name>
            <var>msg</var>
        </resource-bundle>
        <message-bundle>
            i18n.jsf_messages
        </message-bundle>
        <resource-bundle>
            <base-name>/Bundle</base-name>
            <var>bundle</var>
        </resource-bundle>
    </application>

    <navigation-rule>
        <from-view-id>/admin/listAccounts.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>accountDetails</from-outcome>
            <to-view-id>/admin/accountDetails.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/admin/accountDetails.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>goBack</from-outcome>
            <to-view-id>/admin/listAccounts.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/admin/accountDetails.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>editAccount</from-outcome>
            <to-view-id>/admin/editAccount.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
<!-- TODO Zmienić później z listy na stronę szczegółów extra Service -->
    <navigation-rule>
        <from-view-id>/listExtraServices.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>editExtraServicePage</from-outcome>
            <to-view-id>/manager/editExtraService.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <!-- TODO Zmienić później z listy na stronę szczegółów extra Service -->
    <navigation-rule>
        <from-view-id>/manager/editExtraService.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>listExtraServices</from-outcome>
            <to-view-id>/listExtraServices.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/accountDetails.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>goBack</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/*</from-view-id>
        <navigation-case>
            <from-outcome>ownAccountDetails</from-outcome>
            <to-view-id>/accountDetails.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/accountDetails.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>editAccount</from-outcome>
            <to-view-id>/editAccount.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/login/login.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>resetPassword</from-outcome>
            <to-view-id>/resetPassword.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/*</from-view-id>
        <navigation-case>
            <from-outcome>home</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/admin/accountDetails.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>changePassword</from-outcome>
            <to-view-id>/admin/changeOtherPassword.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/admin/listAccounts.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>accountDetails</from-outcome>
            <to-view-id>/admin/accountDetails.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/admin/accountDetails.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>editAccount</from-outcome>
            <to-view-id>/admin/editAccount.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/admin/editAccount.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>accountDetails</from-outcome>
            <to-view-id>/admin/accountDetails.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/admin/changeOtherPassword.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>accountDetails</from-outcome>
            <to-view-id>/admin/accountDetails.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/editAccount.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>accountDetails</from-outcome>
            <to-view-id>/accountDetails.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/changePassword.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>accountDetails</from-outcome>
            <to-view-id>/accountDetails.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/listHalls.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>hallDetails</from-outcome>
            <to-view-id>/hallDetails.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/hallDetails.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>goBack</from-outcome>
            <to-view-id>/listHalls.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>


    <navigation-rule>
        <from-view-id>/client/clientCreateReservationPage.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>goBack</from-outcome>
            <to-view-id>/hallDetails.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/hallDetails.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>toReservationPage</from-outcome>
            <to-view-id>/client/clientCreateReservationPage.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/client/clientReservationsPage.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>reservationDetails</from-outcome>
            <to-view-id>/client/clientReservationDetails.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/client/clientReservationDetails.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>back</from-outcome>
            <to-view-id>/client/clientReservationsPage.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/manager/listReservations.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>reservationDetails</from-outcome>
            <to-view-id>/manager/reservationDetails.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/client/addReview.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>addReview</from-outcome>
            <to-view-id>/listReviews.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/manager/reservationDetails.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>back</from-outcome>
            <to-view-id>/manager/listReservations.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/client/clientReservationDetails.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>edit</from-outcome>
            <to-view-id>/client/clientEditReservation.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/manager/reservationDetails.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>reservationStatusHasBeenChanged</from-outcome>
            <to-view-id>/manager/reservationDetails.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/client/clientEditReservation.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>goToDetails</from-outcome>
            <to-view-id>/client/clientReservationDetails.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/hallDetails.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>editHall</from-outcome>
            <to-view-id>/manager/editHall.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/manager/editHall.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>hallDetails</from-outcome>
            <to-view-id>/hallDetails.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/manager/editHall.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>listHalls</from-outcome>
            <to-view-id>/listHalls.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/editReview.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>listReviews</from-outcome>
            <to-view-id>/listReviews.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/listReviews.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>editReview</from-outcome>
            <to-view-id>/editReview.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
</faces-config>
